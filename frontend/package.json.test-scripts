{
  "scripts": {
    "comment": "Feature 73.8: Enhanced Test Infrastructure Scripts",

    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",

    "test:parallel": "playwright test --config=playwright.config.parallel.ts",
    "test:parallel:headed": "playwright test --config=playwright.config.parallel.ts --headed",
    "test:parallel:chromium": "playwright test --config=playwright.config.parallel.ts --project=chromium",
    "test:parallel:all-browsers": "playwright test --config=playwright.config.parallel.ts --project=chromium --project=firefox --project=webkit",

    "test:integration": "playwright test e2e/tests/integration",
    "test:integration:multi-turn": "playwright test e2e/tests/integration/chat-multi-turn.spec.ts",
    "test:integration:performance": "playwright test e2e/tests/integration/performance-regression.spec.ts",

    "test:chat": "playwright test e2e/tests/chat",
    "test:search": "playwright test e2e/tests/search",
    "test:graph": "playwright test e2e/tests/graph",
    "test:admin": "playwright test e2e/tests/admin",
    "test:errors": "playwright test e2e/tests/errors",

    "test:visual": "playwright test --grep @visual --config=playwright.config.parallel.ts",
    "test:visual:update": "playwright test --grep @visual --update-snapshots",

    "test:a11y": "playwright test --grep @a11y",

    "test:report": "playwright show-report",
    "test:report:open": "open playwright-report/index.html",

    "test:ci": "playwright test --config=playwright.config.parallel.ts --reporter=github",
    "test:ci:sharded": "playwright test --config=playwright.config.parallel.ts --shard=$SHARD_INDEX/$SHARD_TOTAL",

    "test:update-snapshots": "playwright test --update-snapshots",
    "test:trace": "playwright show-trace",

    "test:install": "playwright install --with-deps"
  }
}
