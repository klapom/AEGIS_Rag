# Dockerfile for AEGIS RAG API Testing
# Includes dev dependencies (pytest, etc.)

# ============================================================
# Stage 1: Builder with DEV dependencies
# ============================================================
FROM python:3.11-slim as builder

WORKDIR /build

# Install system dependencies for building
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
ENV POETRY_VERSION=1.8.0
ENV POETRY_HOME=/opt/poetry
ENV POETRY_NO_INTERACTION=1
ENV POETRY_VIRTUALENVS_IN_PROJECT=1
ENV POETRY_VIRTUALENVS_CREATE=1
RUN curl -sSL https://install.python-poetry.org | python3 -

# Copy dependency files
COPY pyproject.toml poetry.lock ./

# Install ALL dependencies INCLUDING dev (pytest, etc.), reranking (sentence-transformers), and ingestion (llama_index)
RUN /opt/poetry/bin/poetry install --no-root --with dev,reranking,ingestion --no-interaction --no-ansi

# ============================================================
# Stage 2: Test Runtime
# ============================================================
FROM python:3.11-slim

WORKDIR /app

# Install runtime system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder (includes pytest!)
COPY --from=builder /build/.venv /app/.venv

# Copy application code
COPY src/ /app/src/
COPY tests/ /app/tests/
COPY scripts/ /app/scripts/
COPY config/ /app/config/
COPY pyproject.toml /app/

# Set environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app:$PYTHONPATH"
ENV PYTHONUNBUFFERED=1

# Create non-root user
RUN useradd -m -u 1000 aegis && \
    chown -R aegis:aegis /app

USER aegis

# Default command: run all tests
CMD ["python", "-m", "pytest", "tests/", "-v", "--tb=short"]
